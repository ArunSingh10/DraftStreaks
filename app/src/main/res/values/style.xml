<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ProgressBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorSky</item>
        <item name="android:shape">line</item>
    </style>

    <style name="toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textStyle">bold</item>
       <!-- <item name="fontFamily">@font/segoebold</item>-->
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.Design.Tab" tools:ignore="PrivateResource,ResourceCycle">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TextAppearanceTab" parent="TextAppearance.Design.Tab" tools:ignore="ResourceCycle">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
        <item name="tabGravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>