<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginHorizontal="@dimen/_15sdp"
     android:background="#3C3C3C">

  <TextView
      android:id="@+id/textTypeofPointValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Duck"
      android:textColor="@color/colorLightSliver"
      android:textSize="@dimen/_10ssp"
      android:textIsSelectable="false"
      android:fontFamily="@font/segoe"
      android:singleLine="true"
      android:gravity="center"
      android:paddingStart="@dimen/_5sdp"
      android:elegantTextHeight="true"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/textPointValue"
      app:layout_constraintHorizontal_weight="1"
      tools:ignore="HardcodedText"
      />

  <TextView
      android:id="@+id/textPointValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="-3.00"
      android:textColor="@color/colorLightSliver"
      android:textSize="@dimen/_10ssp"
      android:textIsSelectable="false"
      android:fontFamily="@font/segoe"
      android:singleLine="true"
      android:gravity="center"
      android:paddingEnd="@dimen/_5sdp"
      android:elegantTextHeight="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/textTypeofPointValue"
      app:layout_constraintHorizontal_weight="1"
      tools:ignore="HardcodedText,RtlSymmetry"
      />

 </androidx.constraintlayout.widget.ConstraintLayout>


</layout>