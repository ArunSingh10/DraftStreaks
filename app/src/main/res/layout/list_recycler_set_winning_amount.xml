<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolBar"
        android:padding="@dimen/_2sdp">

        <EditText
            android:id="@+id/editRankFrom"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:background="#434343"
            android:cursorVisible="true"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:singleLine="true"
            android:text=""
            android:padding="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorHintWhite"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible"
            android:textCursorDrawable="@drawable/background_cursor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editRankTo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            tools:ignore="LabelFor,TextFields" />
        <EditText
            android:id="@+id/editRankTo"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:background="#434343"
            android:cursorVisible="true"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorHintWhite"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible"
            android:textCursorDrawable="@drawable/background_cursor"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/editRankFrom"
            app:layout_constraintEnd_toStartOf="@id/editAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"

            tools:ignore="LabelFor,TextFields" />

        <EditText
            android:id="@+id/editAmount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:background="#434343"
            android:cursorVisible="true"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorHintWhite"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible"
            android:textCursorDrawable="@drawable/background_cursor"
            app:layout_constraintStart_toEndOf="@id/editRankTo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            tools:ignore="LabelFor,TextFields" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>