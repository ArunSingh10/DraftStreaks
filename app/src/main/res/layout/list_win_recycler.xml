<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    android:background="#3C3C3C">
   <TextView
       android:id="@+id/textRankValue"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:text="#1"
       android:paddingHorizontal="@dimen/_10sdp"
       android:gravity="start"
       android:textColor="@color/colorLightSliver"
       android:fontFamily="@font/segoe"
       android:textSize="@dimen/_12ssp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@id/textWinningValue"
       app:layout_constraintHorizontal_weight="1"/>
    <TextView
        android:id="@+id/textWinningValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$ 5 Millions"
        android:textColor="@color/colorLightSliver"
        android:fontFamily="@font/segoe"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textRankValue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>